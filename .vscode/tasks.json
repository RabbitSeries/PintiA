{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "[Linux/Windows] [Debug]",
            // "linux": "bash", // DEFAULT
            "command": "g++",
            "args": [
                "-Wall",
                "-std=gnu++20",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/.vscode/exe_${fileBasenameNoExtension}"
            ],
            "presentation": {
                "reveal": "silent",
                "clear": true
            },
            "options": {
                "cwd": "${fileDirname}",
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            },
            "detail": "gnu++20"
        },
        {
            "type": "cppbuild",
            "label": "[Linux/Windows] [Release]",
            // "linux": "bash", // DEFAULT
            "command": "g++",
            "args": [
                "-fno-tree-ch",
                "-O2",
                "-Wall",
                "-std=gnu++20",
                "-pipe",
                "${file}",
                "-lm",
                "-o",
                "${workspaceFolder}/.vscode/exe_${fileBasenameNoExtension}"
            ],
            "presentation": {
                "reveal": "silent",
                "clear": true
            },
            "options": {
                "cwd": "${fileDirname}",
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            },
            "detail": "gnu++20, release"
        },
        {
            "type": "shell",
            "label": "[Clean] No Confirm",
            "options": {
                "shell": {
                    "executable": "wsl",
                }
            },
            "command": "find . \\( -name '*.exe' -o -name 'exe_*' \\) -print -delete",
            "presentation": {
                "reveal": "silent",
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "[Linux] [Clean] No Confirm",
            "command": "find . \\( -name '*.exe' -o -name 'exe_*' \\) -print -delete",
            "presentation": {
                "reveal": "silent",
            }
        },
    ]
}